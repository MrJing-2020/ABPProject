@using Abp.Authorization.Roles
@using Abp.Web.Mvc.Extensions
@using ABPProject.Authorization
@using System.Web.Optimization
@model Abp.Application.Services.Dto.ListResultDto<ABPProject.Roles.Dto.RoleListDto>
@{
    ViewBag.ActiveMenu = "Roles"; //The menu item will be active for this page.
    //IsGranted("权限名");//返回bool值，用来判断是否有某个权限，可用来控制按钮的显示
}
@section styles
{
    @Styles.Render("~/Table/css")
}
@section scripts
{
    @*@Scripts.Render("~/Table/js")*@
    @Html.IncludeScript("~/Views/Roles/Index.js")
    <script> 

    </script>
}
<div id="page-wrapper">
    <div id="toolbar">
        <button id="remove" class="btn btn-danger" disabled><i class="glyphicon glyphicon-remove"></i> 删除</button>
        <button data-toggle="modal" data-target="#RoleCreateModal" class="btn btn-primary"><i class="fa fa-plus"></i>创建角色</button>
    </div>
    <table id="table"
           data-toolbar="#toolbar"
           data-search="true"
           data-show-refresh="true"
           data-show-toggle="true"
           data-show-columns="true"
           data-show-export="true"
           data-detail-view="true"
           data-minimum-count-columns="2"
           data-show-pagination-switch="true"
           data-pagination="true"
           data-id-field="id"
           data-page-list="[10, 25, 50, 100, ALL]"
           data-show-footer="false"
           data-side-pagination="server"
           data-url="http://localhost:61759/api/services/app/role/GetPagedRole"
                </table>
</div>

@*角色创建模态框*@
<div class="modal fade" id="RoleCreateModal" tabindex="-1" role="dialog" aria-labelledby="UserCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="userCreateForm" role="form" novalidate class="form-validation">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>创建新角色</span>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>昵称</label>
                        <input class="form-control" type="text" name="DisplayName" required maxlength="@AbpRoleBase.MaxDisplayNameLength" minlength="2">
                    </div>
                    <div class="form-group">
                        <label>名字</label>
                        <input type="text" name="Name" class="form-control" required maxlength="@AbpRoleBase.MaxNameLength" minlength="3">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="IsStatic" value="true" checked="checked"> 是否为静态
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary blue"><i class="fa fa-save"></i> <span>保存</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
